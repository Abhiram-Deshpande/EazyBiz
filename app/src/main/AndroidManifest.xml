<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devdroid.easybiz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EasyBiz">
        <activity
            android:name=".drawerActivities.RecentPurchasesActivity"
            android:exported="false" android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"/>
        <activity
            android:name=".drawerActivities.ProvidersActivity"
            android:exported="false"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"/>
        <activity
            android:name=".drawerActivities.EmployeeActivity"
            android:exported="false"
            android:label="About Employees"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar" />
        <activity
            android:name=".authentication.StartActivity"
            android:exported="false"
            android:theme="@style/SplashScreenStyle" />
        <activity
            android:name=".drawerActivities.AboutUsActivity"
            android:exported="false"
            android:label="About Developer"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".drawerActivities.LuxuryActivity"
            android:exported="false"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar" />
        <activity
            android:name=".drawerActivities.GiftsActivity"
            android:exported="false"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar" />
        <activity
            android:name=".drawerActivities.ToysActivity"
            android:exported="false"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar" />
        <activity
            android:name=".SplashScreen"
            android:exported="true"
            android:noHistory="true"
            android:theme="@style/SplashScreenStyle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.EasyBiz.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <service
            android:name=".services.NotificationService"
            android:exported="false" />
    </application>
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

</manifest>